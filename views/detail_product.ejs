<!-- Head-->
<%- include("partials/head", {title: "Inicio"}) %>
<script src="https://unpkg.com/js-image-zoom/js-image-zoom.js"></script>
<script src="https://cdn.jsdelivr.net/npm/js-image-zoom/js-image-zoom.min.js"></script>
    <!-- /Head-->

    <body>
        <!--header-->
        <%- include("partials/header", {title: "Inicio"}) %>
        <div class="container">
            <section class="userForm mb-3" >
                <div class="row no-gutters">
                    <div class="col-md-4" id="img-container">
                        <img class="card-img" src="/img/products/<%= product.img %>" alt="">
                    </div>
                    <script>
                        var options = {
                            width: 320,
                            zoomPosition: "original",
                            scale: 1
                        };
                        new ImageZoom(document.getElementById("img-container"), options);

                    </script>
                    <div class="col-md-8">
                        <div class="card-body">

                            <p class="card-text parrafo"> <strong>Marca:</strong> <%= product.brand.name%>
                            </p>
                            <p class="card-text parrafo">
                                <strong>AÃ±o:</strong> <%= product.releaseYear%>
                            </p>
                            <p class="card-text parrafo">
                                <strong>Condicion:</strong> <%= product.productCondition.name%>
                            </p>
                         <p class="card-text parrafo">
                      <strong>Color:</strong>: <%= product.colour.name%>
                        </p>
                        <p class="card-text parrafo"> 
                        <strong>Disponibles:</strong> <%= product.stock%> unidades
                        </p>
                        <p class="card-text parrafo">
                        <strong>Precio:</strong> $<%= product.price%>
                        </p>
                         <p class="card-text parrafo">
                        <%= product.description%>
                        </p>
                        <div>
                            <% if(user != undefined){ %>
                            <button class="btn btn-primary buttonDetail">COMPRAR</button>
                            <button class="btn btn-primary buttonDetail">AGREGAR AL CARRITO</button>
                            <a href="/products/edit/<%= product.id %>">
                            <button class="btn btn-primary buttonDetail"> EDITAR PRODUCTO</button> </a>
                            <% } %>
                        </div>
                    </div>
                    </div>
                </div>
            </section>
        </div>
    </body>
    <!--FOOTER-->
    <%- include("partials/footer") %>
        <!-- /FOOTER-->

        </html>